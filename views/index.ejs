<style>
  button.edit-button, button.delete-button {
  padding: 8px 12px;
  border-radius: 5px;
  border: none;
  cursor: pointer;
  font-weight: bold;
  transition: background-color 0.3s ease, transform 0.2s;
}

button.edit-button {
  background-color: #4CAF50; /* Green */
  color: white;
}

button.delete-button {
  background-color: #f44336; /* Red */
  color: white;
}

button.edit-button:hover {
  background-color: #45a049;
  transform: scale(1.05);
}

button.delete-button:hover {
  background-color: #e53935;
  transform: scale(1.05);
}
.book-cover {
  width: 120px;
  height: 180px;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  object-fit: cover; /* Ensures image fills the container without distortion */
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  margin: 5px;
}

.book-cover:hover {
  transform: scale(1.05); /* Slightly enlarges cover on hover */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Adds a deeper shadow on hover */
}
.footer {
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
  font-size: 14px;
  margin-top: 20px;
}

.footer-nav a {
  color: #fff;
  margin: 0 10px;
  text-decoration: none;
}

.footer-nav a:hover {
  text-decoration: underline;
}

.social-media{
  margin: 10px;
}

.social-media a:hover img {
  opacity: 0.8; /* Subtle hover effect */
}


</style>
<body>
  <header>
    <h1>My Book Library</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/add">Add New Book</a>
    </nav>
  </header>

  <section>
    <h2>All Books</h2>
  <hr>

    <ul class="book-list">
      <% books.forEach(book => { %>
        <li class="book-item">
          <h3><%= book.title %></h3>
          <p>Author: <%= book.author %></p>
          <p>Rating: <%= book.rating %> / 5</p>
          <p>Date Read: <%= book.date_read %></p>
          <p>Notes: <%= book.notes %></p>
          <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg" alt="Book Cover" class="book-cover">
          <div>
           <a href="/edit/<%= book.id %>">
  <button class="edit-button">Edit</button>
</a>
<form action="/delete/<%= book.id %>" method="POST" style="display:inline;">
  <button type="submit" class="delete-button">Delete</button>
</form>

          </div>
        </li>
      <% }) %>
    </ul>
  </section>
</body>
